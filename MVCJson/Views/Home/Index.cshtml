@{
    ViewBag.Title = "Todo";
}


<div>
    <h2>Todo</h2>
    <a class="btn btn-primary btn-sm" onclick="Todo('@Url.Action("Todo", "Home")')">Todo</a>
    <h2>Album</h2>
    <a class="btn btn-primary btn-sm" onclick="Album('@Url.Action("Album", "Home")')">Album</a>
    <h2>Comment</h2>
    <a class="btn btn-primary btn-sm" onclick="Comment('@Url.Action("Comment", "Home")')">Comment</a>
</div>
<br />
<div>

    <div id="demo"></div>
</div>

<script>
    function Todo() {
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                var response = JSON.parse(this.responseText);
                var output = "";
                for (var i = 0; i < response.length; i++) {
                    output += "<li style='list-style-type: square;' class='list-group-item '>"  + response[i].title + "</li>";
                }
                document.getElementById("demo").innerHTML = output;
            }
        }
        xhttp.open("GET", "https://jsonplaceholder.typicode.com/todos", true);
        xhttp.send();


    }
    function Album() {
    var xhttp = new XMLHttpRequest();
    xhttp.onreadystatechange = function () {
        if (this.readyState == 4 && this.status == 200) {
            var response = JSON.parse(this.responseText);
            var output = "";


            for (var i = 0; i < response.length; i++) {
                output += "<li style='list-style-type: circle;' class='list-group-item '>" + response[i].title + "</li>";

            }

            document.getElementById("demo").innerHTML = output;

        }
    }
    xhttp.open("GET", "https://jsonplaceholder.typicode.com/albums", true);
    xhttp.send();

    }
    function Comment() {
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                var response = JSON.parse(this.responseText);
                var output = "";


                for (var i = 0; i < response.length; i++) {
                    output += "<li style='list-style-type: upper-roman;' class='list-group-item '>" + response[i].body + "</li>";

                }

                document.getElementById("demo").innerHTML = output;

            }
        }
        xhttp.open("GET", "https://jsonplaceholder.typicode.com/Comments", true);
        xhttp.send();

    }

</script>